{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "clean"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "detail": "Pack this Fusee app as a fuz file.",
            "type": "shell",
            "dependsOn": [
                "clean",
                "build"
            ],
            "command": "fusee",
            "args": [
                "pack",
                "bin/Debug/Fusee_App.dll"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "publish-desktop",
            "detail": "Publish this Fusee app to a self contained application.",
            "dependsOn": [
                "clean",
                "build"
            ],
            "command": "fusee",
            "args": [
                "publish",
                "-p", "Desktop",
                "-i", "bin/Debug/Fusee_App.dll",
                "-o", "${workspaceFolder}/pub/exe"
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "publish-web",
            "detail": "Publish this Fusee app to a Blazor web application.",
            "dependsOn": [
                "clean",
                "build"
            ],
            "command": "fusee",
            "args": [
                "publish",
                "-p", "Web",
                "-i", "bin/Debug/Fusee_App.dll",
                "-o", "${workspaceFolder}/pub/web"
            ],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": [],
        }
    ]
}
