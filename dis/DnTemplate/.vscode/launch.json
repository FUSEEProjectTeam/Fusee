    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch in FUSEE Player",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${env:FuseeRoot}bin/Debug/Player/Desktop/Fusee.Engine.Player.Desktop.exe",
            "args": ["${workspaceRoot}/bin/Debug/netstandard2.0/Fusee_App.dll"],
            "cwd": "${env:FuseeRoot}bin/Debug/Player/Desktop",
            "stopAtEntry": false,
            "console": "externalTerminal"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}