<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>Fusee.Engine.Core</RootNamespace>
    <PackageId>Fusee.Engine.Core</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Description>Fusee Engine Core</Description>
