<Project Sdk="Mono.WebAssembly.Sdk">
    <PropertyGroup>
        <RootNamespace>Fusee.Engine.Player.WebAsm</RootNamespace>
        <PackageId>Fusee.Engine.Player.WebAsm</PackageId>
        <TargetFramework>netstandard2.1</TargetFramework>
        <MonoWasmLinkMode>Full</MonoWasmLinkMode>
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <PropertyGroup>
        <OutputPath>$(BaseOutputPath)\Player\WebAsm\</OutputPath>
        <UserSecretsId>39ccb1af-844b-447c-a25e-fe898d19d0cf</UserSecretsId>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="Assets\**\*" PackagePath="contentFiles\Assets\" CopyToOutputDirectory="PreserveNewest" />
        <Content Include="server.py" CopyToOutputDirectory="PreserveNewest" />
        <Content Include="canvaskit.wasm" CopyToOutputDirectory="PreserveNewest" />
        <Content Include="canvaskit.js" CopyToOutputDirectory="PreserveNewest" />
        <Content Include="index.html" CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>  
    <ItemGroup>
        <ProjectReference Include="$(FuseeEngineRoot)src\Engine\Imp\Graphics\WebAsm\Fusee.Engine.Imp.Graphics.WebAsm.csproj">
            <PrivateAssets>analyzers</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="$(FuseeEngineRoot)\src\Base\Imp\WebAsm\Fusee.Base.Imp.WebAsm.csproj">
            <PrivateAssets>analyzers</PrivateAssets>
        </ProjectReference>
        <ProjectReference Include="..\Core\Fusee.Engine.Player.Core.csproj">
            <PrivateAssets>analyzers</PrivateAssets>
        </ProjectReference>

        <Reference Include="Uno.SkiaSharp">
            <HintPath>$(FuseeEngineRoot)\ext\Uno.SkiaSharp\SkiaSharp.Wasm.dll</HintPath>
        </Reference>

         <Reference Include="protobuf-net">
            <HintPath>$(FuseeEngineRoot)\ext\protobuf-net\protobuf-net.dll</HintPath>
        </Reference>
        
        <PackageReference Include="WebAssembly.Bindings" Version="0.2.2" />
        <PackageReference Include="WebAssembly.Net.Http" Version="0.2.2" />
        <PackageReference Include="WebAssembly.Net.WebSockets" Version="0.2.2" />
        <PackageReference Include="System.Drawing.Common" Version="4.7.0" />
      
    </ItemGroup>

    <Target Name="FuseeWasmCopyInheritedAssets" BeforeTargets="MonoWasmCopyOutput">
        <ItemGroup>
            <InheritedAssets Include="%(ReferencePath.RootDir)%(ReferencePath.Directory)\Assets\*.*" />
        </ItemGroup>
        <Copy SourceFiles="%(InheritedAssets.FullPath)" DestinationFolder="$(OutputPath)\Assets" ContinueOnError="true" />
    </Target>
</Project>
